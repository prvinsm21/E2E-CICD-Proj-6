pipeline {
    agent any
    environment {
        DOCKERHUB_USERNAME = "prvinsm21"
    }
    stages {
        stage ('Git Checkout') {
            steps {
                sh 'echo Passed'
            }
        }
        stage ('Code Compile') {
            steps {
                sh 'cd E2E-CICD-Projects/Resturant-Website && mvn clean compile'
            }
        }
        stage ('Unit Testing') {
            steps {
                sh 'cd E2E-CICD-Projects/Resturant-Website && mvn test'
            }
        }
        stage ('Integration Testing') {
            steps {
                sh 'cd E2E-CICD-Projects/Resturant-Website  && mvn verify -DskipUnitTests'
            }
        }
        stage ('Build Stage') {
            steps {
                sh 'cd E2E-CICD-Projects/Resturant-Website  && mvn clean install'
            }
        }
        stage ('Static Code analysis') {
            steps {
                script {
                    withSonarQubeEnv(credentialsId: 'sonar-api') {
                        sh 'cd E2E-CICD-Projects/Resturant-Website && mvn clean package sonar:sonar'
                    }
                }
            }
        }
        stage ('Quality Gate Status') {
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-api'
                }
            }
        }
    }
}